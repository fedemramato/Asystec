{% extends 'login/base.twig' %}

{% block body %}
	<div class="container">
		<div class="col-xs-4"></div>
		<div class="col-xs-4">

			<form method="post">
				<legend>Iniciar Sesión</legend>

				{# MENSAJE DE ERROR #}
				{% if errors|length %}
					<div class="alert alert-danger">{{ errors.first }}</div>
				{% endif %}

				<div class="form-group">
					<input type="text" id="username" name="username" class="form-control" placeholder="Nombre de usuario" />
				</div>

				<div class="form-group">
					<input type="password" id="password" name="password" class="form-control" placeholder="Contraseña" />
				</div>

				<button type="submit" class="btn btn-primary btn-block btn-large" id="btn-login" data-loading-text="Aguarde un instante...">Ingresar</button>
			</form>
		</div>
		<div class="col-xs-4"></div>
	</div>
{% endblock %}